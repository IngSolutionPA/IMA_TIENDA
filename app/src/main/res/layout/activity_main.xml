        android:textStyle="bold" />

    <!-- Icono de cerrar sesiÃ³n -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/circle"
        android:padding="8dp"> <!-- Ajusta el padding segÃºn sea necesario -->

        <ImageView
            android:id="@+id/logout_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/intercambio" />
    </FrameLayout><!-- Reemplaza con tu icono -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="17dp">

        <!-- Spinner -->
        <Spinner
            android:id="@+id/feriasSpinner"
            android:layout_width="378dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_background"
            android:popupBackground="@drawable/button_background"
            android:layout_toStartOf="@id/editIcon" /> <!-- Coloca el Spinner a la izquierda del Ã­cono -->

        <!-- Icono de Editar -->
        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/write"
        android:layout_marginStart="8dp" />
    </RelativeLayout>



